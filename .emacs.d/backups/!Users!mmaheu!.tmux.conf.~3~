# Initial setup
set -g default-terminal screen-256color
set -g status-keys vi
set-option -g default-command "reattach-to-user-namespace -l zsh"

# use C-j and C-f for the prefix.
set-option -g prefix C-j
set-option -g prefix2 C-f
unbind-key C-j
bind-key C-j send-prefix
set -g base-index 1

# Powerline
# source /usr/local/lib/python3.7/site-packages/powerline/bindings/tmux/powerline.conf

# Easy config reload
bind-key r source-file ~/.tmux.conf \; display-message "tmux.conf reloaded."


# Easy clear history
bind-key L clear-history


# set-option -g default-command "reattach-to-user-namespace -l bash" # or bash...
bind C-c run "tmux save-buffer - | reattach-to-user-namespace pbcopy"
bind C-v run "reattach-to-user-namespace pbpaste | tmux load-buffer - && tmux paste-buffer"

# Double press <prefix> to move to last window
bind-key C-f last-window
bind-key C-j last-window


# Lengthen the amount of time status messages are displayed
set-option -g display-time 2000
set-option -g display-panes-time 3000


# Set the base-index to 1 rather than 0
set -g base-index 1
set-window-option -g pane-base-index 1


# Automatically set window title
set-window-option -g automatic-rename on
set-option -g set-titles on


# Key bindings for copy-paste
setw -g mode-keys vi
unbind p
bind p paste-buffer
bind-key -T copy-mode-vi 'v' send -X begin-selection
bind-key -T copy-mode-vi 'y' send -X copy-selection-and-cancel


# Window activity monitor
setw -g monitor-activity on
set -g visual-activity on


# Set easier window split keys
bind-key v split-window -h
bind-key h split-window -v


# Use Alt-arrow keys without prefix key to switch panes
bind -n M-Left select-pane -L
bind -n M-Right select-pane -R
bind -n M-Up select-pane -U
bind -n M-Down select-pane -D


# Allow the arrow key to be used immediately after changing windows.
set-option -g repeat-time 0


# Shift arrow to switch windows
bind -n S-Left  previous-window
bind -n S-Right next-window


# Easily reorder windows with CTRL+SHIFT+Arrow
bind-key -n C-S-Left swap-window -t -1
bind-key -n C-S-Right swap-window -t +1


# Synchronize panes
bind-key y set-window-option synchronize-panes\; display-message "synchronize mode toggled."


# No delay for escape key press
set -sg escape-time 0


# Window activity monitor
setw -g monitor-activity on
set -g visual-activity on


# Mouse Mode
set -g mouse on


# Plugins
run-shell /Users/mmaheu/.tmux/plugins/tmux-continuum/continuum.tmux
run-shell /Users/mmaheu/.tmux/plugins/tmux-resurrect/resurrect.tmux
set -g @continuum-restore 'on'
set -g @continuum-boot 'on'
source-file "/users/mmaheu/.tmux/plugins/tmux-gitbar/tmux-gitbar.tmux"
TMUX_GITBAR_CONF="/users/mmaheu/.tmux/config/tmux-gitbar.conf"
TMUX_GITBAR_DIR="/users/mmaheu/.tmux/plugins/tmux-gitbar"


# Theme
set -g window-status-current-bg colour238
set -g window-status-current-fg colour123
set -g window-status-current-attr bold
set -g window-status-activity-bg colour123
set -g window-status-activity-fg colour235
set-option -g message-bg colour237
set-option -g message-fg colour231
set-option -g pane-border-fg colour238
set-option -g pane-active-border-fg colour123


# Status Bar
set -g status-justify centre
set -g status-bg colour235
set -g status-fg colour123
set -g status-interval 60
set -g status-left-length 50
set -g status-left '#[fg=colour,38bold]#[bg=colour238] #H #[bg=colour238,nobold]#[fg=colour123] [#S] '
set -g status-right '#[bg=colour238]#[fg=colour123] #(cut -d " " -f 1-3 /proc/loadavg) #[bg=colour238]#[fg=colour123,bold] %H:%M '
